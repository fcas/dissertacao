journal = {Urban Forum},
keywords = {Courts,Impact of law on urban planning,Right to the city,Socio-economic rights,South African constitution},
number = {3},
pages = {257--278},
title = {{Rights and the City: An Exploration of the Interaction Between Socio-economic Rights and the City}},
volume = {23},
