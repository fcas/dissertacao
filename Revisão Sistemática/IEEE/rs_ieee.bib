keywords = {Component,Social media,Travel diary survey,Twitter},
pages = {208--213},
title = {{Complementing Travel Diary Surveys with Twitter Data: Application of Text Mining Techniques on Activity Location, Type and Time}},
volume = {2015-October},
year = {2015}
}
@article{Wang2017,
