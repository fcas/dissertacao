doi = {10.1109/COMST.2014.2339817},
file = {:Users/felipealvesdias/Documents/RS - Metodologia/IEEE/A Communications-Oriented Perspective on Traffic Management Systems for Smart Cities- Challenges and Innovative Approaches.pdf:pdf},
