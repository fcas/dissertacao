doi = {10.1109/ITSC.2015.43},
file = {:Users/felipealvesdias/Documents/RS - Metodologia/IEEE/Complementing Travel Diary Surveys with Twitter Data- Application of Text Mining Techniques on Activity Location, Type and Time.pdf:pdf},
