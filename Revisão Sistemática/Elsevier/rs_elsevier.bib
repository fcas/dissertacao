publisher = {Tongji University and Tongji University Press},
title = {{Demand-responsive public transportation re-scheduling for adjusting to the joint leisure activity demand}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S2046043016300314},
volume = {5},
year = {2016}
}
